<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.question.DownloadQuestion"
    android:background="@color/white"
    android:id="@+id/iddownload">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="60dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/dtlsQuestionprofile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/sampleimage"
                android:elevation="20dp"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/dtlsQuestionYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="76dp"
            android:text="2019"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dtlsSem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="28dp"
            android:text="1st semester "
            android:textAlignment="textEnd"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.383"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/dtlsQuestionYear" />

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:cardElevation="35dp">

            <TextView
                android:id="@+id/viewquestiondocs"
                android:layout_width="180dp"
                android:layout_height="47dp"
                android:background="#FF5722"
                android:elevation="35dp"
                android:gravity="center"
                android:text="View"
                android:textStyle="bold"
                android:textColor="#090909"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView"
                app:strokeColor="#070707" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="47dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"

            >

            <TextView
                android:id="@+id/questiondownload"
                android:layout_width="180dp"
                android:layout_height="47dp"
                android:background="#090909"
                android:clickable="true"
                android:elevation="20dp"
                android:gravity="center"
                android:text="Download"
                android:textColor="#FF5722"
                android:textSize="20dp"
                android:textStyle="bold"
                app:strokeColor="#070707" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/questiontext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>