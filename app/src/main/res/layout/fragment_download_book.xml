<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_download_fragment"
    style="@style/Theme.AppCompat.DayNight.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.book.DownloadBook"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="60dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/dtlsbookprofile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/sampleimage"
                android:elevation="20dp"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/notenamedtls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="75dp"
            android:text="programming with c"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dtlsnoteauthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="28dp"
            android:text="debashis "
            android:textAlignment="textEnd"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.872"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/notenamedtls" />

        <TextView
            android:id="@+id/dtlsnotesize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="28dp"
            android:text="5Mb "
            android:textAlignment="textEnd"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.879"
            app:layout_constraintStart_toEndOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/dtlsnoteauthor" />

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="47dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:cardElevation="35dp">

            <TextView
                android:id="@+id/viewnotedocs"
                android:layout_width="180dp"
                android:layout_height="47dp"
                android:background="@color/black"
                android:elevation="35dp"
                android:gravity="center"
                android:text="View"
                android:textColor="#43CEE1"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView"
                app:strokeColor="#070707" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="47dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"

            >

            <TextView
                android:id="@+id/notedownload"
                android:layout_width="180dp"
                android:layout_height="47dp"
                android:background="#43CEE1"
                android:clickable="true"
                android:elevation="20dp"
                android:gravity="center"
                android:text="Download"
                android:textColor="#111111"
                android:textSize="20dp"
                android:textStyle="bold"
                app:strokeColor="#070707" />


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>